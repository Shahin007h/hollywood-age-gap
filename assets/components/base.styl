// Base styling

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%
  -webkit-text-size-adjust: none

body
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  padding-top: 45px
  font-family: $font-verdana
  line-height: 1
  background: $gradient-teal
  color: $grey-drk

::-moz-selection
  background-color: $brand-yellow
  color: $grey-drk

::selection
  background-color: $brand-yellow
  color: $grey-drk

p, .content ul
  margin-bottom: 20px
  font-size: 16px
  line-height: 1.4

.content ul li
  margin: 0 0 10px 30px
  list-style: disc

a
  color: $brand-blue
  text-decoration: none

a, a img
  transition: opacity .1s ease-in

em
  font-style: italic

// for FOUT styling
.wf-inactive
  .search h1, .hero nav a, .hero h2, label
    opacity: 1

.wf-loading
  .search h1, .hero nav a, .hero h2, label
    opacity: 0
  .search h1, .hero h2, label
    font-size: 5px

.wf-active
  .search h1, .hero nav a, .hero h2, label
    opacity: 1
    transition: opacity .1s ease-in

// Fade-in animation
{fadeInKeyframes}

// Clearfix
.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

// visually hide text meant for screen readers only
.sr-only
  position: absolute
  width: 1px
  height: 1px
  padding: 0
  overflow: hidden
  clip: rect(0, 0, 0, 0)
  white-space: nowrap
  -webkit-clip-path: inset(50%)
  clip-path: inset(50%)
  border: 0
